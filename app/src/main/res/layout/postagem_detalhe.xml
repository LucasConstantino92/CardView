<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:elevation="6dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lucas Constantino"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Agora Mesmo" />

            <ImageView
                android:id="@+id/img_postagem"
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/imagem1" />

            <TextView
                android:id="@+id/txt_postagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Que viagem legal!" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_curtir"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_custom"
                android:drawableLeft="@drawable/ic_curtir"
                android:padding="6dp"
                android:text="Curtir"
                android:textColor="@color/purple_500" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_comentar"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/btn_custom"
                android:drawableLeft="@drawable/ic_comentario"
                android:padding="6dp"
                android:text="Comentar"
                android:textColor="@color/purple_500" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>